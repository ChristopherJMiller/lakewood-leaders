<div class="main-div">
  <h1>Edit <%= @event.name %></h1>
  <%= form_for @event, remote: true do |f| %>

    <fieldset class="form-group">
      <%= f.label :name, class: 'form-control-label' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Event Name' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :description, class: 'form-control-label' %>
      <%= f.text_area :description, cols: 20, rows: 10, class: 'form-control', placeholder: 'Description' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :location, class: 'form-control-label' %>
      <%= f.text_field :location, class: 'form-control', placeholder: 'Event Location' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :start_time, class: 'form-control-label' %>
      <%= f.datetime_select :start_time, class: 'form-control' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :end_time, class: 'form-control-label' %>
      <%= f.datetime_select :end_time, class: 'form-control' %>
    </fieldset>

    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
  <%= button_to 'Remove Event', { action: 'destroy', id: @event.id }, method: :delete, remote: true, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
</div>
