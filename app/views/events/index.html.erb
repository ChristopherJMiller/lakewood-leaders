<div class="main-div">
  <% if logged_in %>
    <% if User.find_by_id(session[:user_id]).admin? %>
      <%= link_to new_event_path, class: 'btn btn-info pull-xs-right' do %>
        <i class="fa fa-plus"></i> Create a New Event
      <% end %>
    <% end %>
  <% end %>
  <h1>Available Events</h1>
  <table class="table table-striped">
    <tbody>
      <%= render partial: 'event', collection: Event.where("finished = ?", false), as: :event or 'No avaliable events to join.'%>
    </tbody>
  </table>
  <h1>Past Events</h1>
  <table class="table table-striped">
    <tbody>
      <%= render partial: 'event', collection: Event.where("finished = ?", true), as: :event or 'No past events have been found.'%>
    </tbody>
  </table>
</div>
