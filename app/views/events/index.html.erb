<div class="main-div">
  <% if logged_in %>
    <% if User.find_by_id(session[:user_id]).admin? %>
      <%= link_to new_event_path, class: 'btn btn-info float-xs-right' do %>
        <i class="fa fa-plus"></i> Create a New Event
      <% end %>
    <% end %>
  <% end %>
  <h1>Available Events</h1>
  <table class="table table-striped">
    <thead>
      <th>Event Name</th>
      <th>Slots Available</th>
      <th>Location</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th></th>
    </thead>
    <tbody>
      <%= render partial: 'event', collection: Event.where("finished = ?", false), as: :event or 'No avaliable events to join.'%>
    </tbody>
  </table>
  <%= link_to 'View Past Events', past_path, class: 'btn btn-secondary btn-block' %>
</div>
