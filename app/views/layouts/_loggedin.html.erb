<%= link_to user_path(session[:user_id]), class: 'dropdown-item' do %>
  <i class='fa fa-user' aria-hidden='true'></i> Your Profile
<% end %>
<%= link_to user_messages_path(session[:user_id]), class: 'dropdown-item' do %>
  <i class='fa fa-inbox' aria-hidden='true'></i> Your Inbox <span class="tag tag-pill tag-info"><%= Message.where(user_id: session[:user_id]).count.to_s %></span>
<% end %>
<div class='dropdown-divider'></div>
<%= link_to edit_user_path(session[:user_id]), class: 'dropdown-item' do %>
  <i class='fa fa-cog' aria-hidden='true'></i> Account Settings
<% end %>
<%= link_to 'Log Out', {controller: :sessions, action: :destroy}, method: 'delete', remote: true, class: 'dropdown-item', name: 'navbar_logout' %>
