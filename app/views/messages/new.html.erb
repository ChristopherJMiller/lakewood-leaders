<div class="main-div">
  <h1>Compose a New Message</h1>

  <%= form_for @message, url: user_messages_path(params[:user_id]), remote: true do |f| %>
    <fieldset class="form-group" disabled>
      <label class='form-control-label'>To</label>
      <input type="text" class="form-control" placeholder='<%= User.find_by_id(params[:user_id]).name %>'>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :subject, class: 'form-control-label' %>
      <%= f.text_field :subject, class: 'form-control', placeholder: 'Subject' %>
    </fieldset>

    <fieldset class="form-group">
      <%= f.label :body, class: 'form-control-label' %>
      <%= f.text_area :body, cols: 20, rows: 10, class: 'form-control', placeholder: 'Message Body' %>
    </fieldset>

    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
